@page
@model WebApp.Pages.Producto.EditModel
@{ }


<div id="AppEdit" class="container">
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue ? "Actualizar" : "Nuevo")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdProducto" />

                <div class="form-group mb-3">
                    <label for="Entity.NombreProducto" class="form-label">Nombre</label>
                    <input type="text" class="form-control" asp-for="Entity.NombreProducto" maxlength="250" required>
                </div>
                 <div class="form-group mb-3">
                    <label for="Entity.PrecioProducto" class="form-label">Precio</label>
                    <input type="text" class="form-control" asp-for="Entity.PrecioProducto" maxlength="250" required>
                </div>

                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-outline-primary">
                            @(Model.id.HasValue?"Actualizar":"Agregar")
                        </button>
                    </div>
                </div>

            </form>


        </div>
    </div>

</div>

@section Scripts{
<script>
    $(document).ready(function () {
        $('#FormEdit').bootstrapValidator({
            // To use feedback icons, ensure that you use Bootstrap v3.1.0 or later
            feedbackIcons: {
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },
            fields: {
                Nombre: {
                    message: 'Nombre no valido',
                    validators: {
                        notEmpty: {
                            message: 'Nombre no puede ir vacio'
                        },
                        stringLength: {
                            min: 6,
                            max: 30,
                            message: 'El Nombre debe ser de 6 a 30 caracteres'
                        },
                        regexp: {
                            regexp: /^[a-zA-Z0-9]+$/,
                            message: 'El Nombre solo puede contener letras o numeros'
                        }
                    }
                }
            }
        });
    });
</script>
    <script defer src="~/App/Producto/Edit.js"></script>

}